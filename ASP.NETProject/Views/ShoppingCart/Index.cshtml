@model ShoppingCartViewModel

<div class="row checkoutForm">
    <h2>Your shopping cart:</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Monitor</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
            {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-left">@line.Monitor.Name</td>
                <td class="text-right">@line.Monitor.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.Monitor.Price).ToString("c"))
                </td>
                <td class="text-center"><a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-monitorId="@line.Monitor.Id">Add</a></td>
                <td class="text-center"><a class="btn btn-danger" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-monitorId="@line.Monitor.Id">Remove</a></td>
                
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ShoppingCartTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div>
        <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
        <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Back to List</a>
        <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="ClearShoppingCart">Clear</a>
    </div>
</div>