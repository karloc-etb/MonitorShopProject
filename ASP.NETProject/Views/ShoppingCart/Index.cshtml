@model ASP.NETProject.Views.ShoppingCartViewModel

<div class="row checkoutForm">
    <h2>Your shopping cart:</h2>
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Monitor</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">@line.Amount</td>
                    <td class="text-left">@line.Monitor.Name</td>
                    <td class="text-right">@line.Monitor.Price.ToString("c")</td>
                    <td class="text-right">
                        @((line.Amount * line.Monitor.Price).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-id="@line.Monitor.Id"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ShoppingCartTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div>
        <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="Checkout">Checkout</a>
        <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Back to List</a>
    </div>

