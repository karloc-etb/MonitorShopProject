@model IEnumerable<ASP.NETProject.Models.ShoppingCartItem>

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingCartId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monitor.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShoppingCartItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShoppingCartItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShoppingCartItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
