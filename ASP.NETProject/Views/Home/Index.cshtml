@model IEnumerable<ASP.NETProject.Models.Monitor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <p>
            @foreach (var item in Model)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <h5>
                        @Html.DisplayFor(modelItem => item.Name)
                    </h5>


                    <div class="thumbnail">
                        <img alt="@item.Name" src="@item.ImageThumbnailUrl" class="img-responsive" style="width:100%;" />
                    </div>

                    <div class="caption">
                        <h3 class="pull-right">
                            @Html.DisplayFor(modelItem => item.Price)
                        </h3>
                    </div>

                </div>
            }

        </p>
    </div>
</div>
